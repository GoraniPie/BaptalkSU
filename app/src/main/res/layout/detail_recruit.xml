<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:text=" 밥 한끼 같이해요"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibt_ClosePopup"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|top"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/baseline_gb_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_UploaderProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="이름 : 김수진"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_ModifyRecruit"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_create_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/baseline_add_location_alt_24" />

        <TextView
            android:id="@+id/tv_Place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  장소 : 삼육대학교 정문 "
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/tv_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  시간 : 13:20pm ~ 14:20pm "
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="3dp"
        android:paddingBottom="10dp"
        android:text="나이 : 24(만22)"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Major"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="학과 : 컴퓨터공학과"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_Content"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="내용" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_KeywordAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="#01년생"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_KeywordMBTI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="#INFJ"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_KeywordMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:ellipsize="none"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="#공대"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_KeywordSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="#남자"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bt_EnterRecruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0088FF"
        android:text="입장" />

</LinearLayout>
